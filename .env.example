# SeekrAI Environment Configuration
# Copy this file to .env and update the values as needed

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Flask Application Settings
SECRET_KEY=your_secret_key_here
FLASK_DEBUG=false
FLASK_HOST=127.0.0.1
FLASK_PORT=5000

# File Management
UPLOAD_FOLDER=uploads
JOB_RESULTS_FOLDER=job_results
CACHE_FOLDER=cache
LOGS_FOLDER=logs
MAX_FILE_SIZE_MB=16

# Database URLs (if using databases in the future)
# DATABASE_URL=sqlite:///seekrai.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5

# OpenAI API Settings
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_RETRIES=3
OPENAI_TIMEOUT=30

# Cache Settings
CACHE_EXPIRATION_DAYS=7
CACHE_MAX_SIZE_MB=100

# Job Search Settings
DEFAULT_RESULTS_WANTED=10
DEFAULT_JOB_SITES=indeed,linkedin
DEFAULT_COUNTRY=USA
DEFAULT_HOURS_OLD=72

# Security Settings
ENABLE_CSRF_PROTECTION=true
ENABLE_SECURE_UPLOADS=true
MAX_UPLOAD_ATTEMPTS=3

# Rate Limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=60

# Development Settings
ENABLE_DEBUG_INFO=false
ENABLE_TEST_ROUTES=false
ENABLE_MOCK_API_CALLS=false

# File Cleanup Settings
DEFAULT_FILE_CLEANUP_DAYS=30
MAX_FILE_CLEANUP_DAYS=90

# Resume Processing Settings
ENABLE_PII_REMOVAL=true
PRESERVE_PROFESSIONAL_DOMAINS=linkedin.com,github.com,portfolio 